  <script>
   
   function validate(){
               var firstname = document.getElementById('fname').value;
               var lastname = document.getElementById('lname').value;
               var email = document.getElementById('mail').value;
               var password = document.getElementById('password').value;
               var confirmPass = document.getElementById('cpassword').value;
               var dob = document.getElementById('dob').value;
               var mailPattern = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/ ;



               if(firstname == ""){
                document.getElementById('firstname').innerHTML = " * Enter your first name *";
                return false;
               }else{
                document.getElementById('firstname').innerHTML = " ";
               }

               if(lastname == ""){
                document.getElementById('lastname').innerHTML = " * Enter your last name *";
                return false;
               }else{
                document.getElementById('lastname').innerHTML = " ";
               }

               if(email == ""){
                document.getElementById('mailId').innerHTML = " * Enter your email Id *";
                return false;
               }

               if(mailPattern.test(email) == false){
                document.getElementById('mailId').innerHTML = " * invalid email *";
                return false;
               }
               else{
                document.getElementById('mailId').innerHTML = " ";
               }

               if(password == ""){
                document.getElementById('pass').innerHTML = " * Enter the password *";
                return false;
               }

               if(password.length < 5){
                document.getElementById('pass').innerHTML = " * Enter at least 5 characters *";
                return false;
               }
               else{
                document.getElementById('pass').innerHTML = " ";
               }


               if(confirmPass == ""){
                document.getElementById('cpass').innerHTML = " * Confirm your password *";
                return false;
               }

               if(password != confirmPass){
                document.getElementById('cpass').innerHTML = " * Password is not matching *";
                return false;
               }
               else{
                document.getElementById('cpass').innerHTML = " ";
               }

               if(dob == ""){
                document.getElementById('date').innerHTML = " * Enter your date of birth *";
                return false;
               }else{
                document.getElementById('date').innerHTML = " ";
               }

           }

              
  </script>


